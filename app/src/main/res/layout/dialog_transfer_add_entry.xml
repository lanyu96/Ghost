<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/dialog_base_color"
        android:gravity="center"
        android:padding="10dp"
        android:text="内容"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray_deep"/>

    <LinearLayout
        style="@style/dialog_ll_base">

        <LinearLayout
            style="@style/dialog_ll_row"
            android:layout_marginBottom="10dp"
            >

            <TextView
                style="@style/dialog_tv_key"
                android:drawableLeft="@drawable/xiaohongxing"
                android:text="母猪耳号"/>

            <TextView
                android:id="@+id/tv_dialog_transfer_add_pignum"
                style="@style/dialog_tv_value"
                android:layout_weight="2.7"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/dialog_ll_row"
            android:layout_marginBottom="5dp"
            >

            <TextView
                style="@style/dialog_tv_key"
                android:text="栋舍"/>

            <TextView
                android:id="@+id/tv_dialog_transfer_location"
                style="@style/dialog_tv_value"
                android:layout_weight="2.7"
                android:background="@null"
                />

            <TextView
                style="@style/dialog_tv_key"
                android:text="状态"/>

            <TextView
                android:id="@+id/tv_dialog_transfer_pig_state"
                style="@style/dialog_tv_value"
                android:layout_weight="2.7"
                android:background="@null"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray_deep"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_dialog_transfer_cancle"
            style="@style/dialog_tv_button"
            android:text="取消"
            android:textColor="@color/black_tint"
            />

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_deep"/>

        <TextView
            android:id="@+id/tv_dialog_transfer_finish"
            style="@style/dialog_tv_button"
            android:text="完成"
            android:textColor="@color/red"
           />

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_deep"/>

        <TextView
            android:id="@+id/tv_dialog_transfer_scan"
            style="@style/dialog_tv_button"
            android:text="扫码"
            android:textColor="@color/blue"
            />
    </LinearLayout>
</LinearLayout>