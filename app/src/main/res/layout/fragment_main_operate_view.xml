<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/common_title"
        android:layout_width="match_parent"
        android:paddingTop="32dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="?attr/base_color"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:text="工具箱"
        android:textColor="@color/white"
        android:textSize="22sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <!--第一行图标-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--第一个图标-->

                <LinearLayout
                    android:id="@+id/fragment_tool_qr_code_scan_ll"
                    style="@style/fragment_main_tool_icon_ll">
                    <ImageView
                        android:src="@drawable/icon_qita"
                        style="@style/fragment_main_tool_icon_iv" />
                    <TextView
                        android:text="二维码识别"
                        style="@style/fragment_main_tool_icon_tv" />

                </LinearLayout>
                <!--第二个图标-->
                <LinearLayout
                    android:id="@+id/fragment_tool_qr_code_create_ll"
                    style="@style/fragment_main_tool_icon_ll">
                    <ImageView
                        android:src="@drawable/icon_qita"
                        style="@style/fragment_main_tool_icon_iv" />
                    <TextView
                        android:text="二维码生成"
                        style="@style/fragment_main_tool_icon_tv" />

                </LinearLayout>
                <!--第三个图标-->
                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/fragment_tool_birthday_ll"
                    style="@style/fragment_main_tool_icon_ll">
                    <ImageView
                        android:src="@drawable/icon_qita"
                        style="@style/fragment_main_tool_icon_iv" />
                    <TextView
                        android:text="生辰"
                        style="@style/fragment_main_tool_icon_tv" />

                </LinearLayout>

                <!--第四个图标-->
                <LinearLayout
                    android:visibility="invisible"
                    style="@style/fragment_main_tool_icon_ll">
                    <ImageView
                        android:src="@drawable/icon_qita"
                        style="@style/fragment_main_tool_icon_iv" />
                    <TextView
                        android:text="二维码生成"
                        style="@style/fragment_main_tool_icon_tv" />

                </LinearLayout>





            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
