<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

    <wlhl.com.baselibrary.view.SquareLayout
        android:id="@+id/sl_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_gray_white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/iv_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/tv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            />

    </wlhl.com.baselibrary.view.SquareLayout>
    <TextView
        android:id="@+id/tv_count"
        android:layout_alignTop="@id/sl_item"
        android:text="12"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignRight="@id/sl_item"
        android:background="@drawable/shape_text_red_back"
        android:layout_width="20dp"
        android:gravity="center"
        android:layout_height="20dp"/>
</RelativeLayout>