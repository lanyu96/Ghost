<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/common_title_layout"
        layout="@layout/include_common_title" />




    <FrameLayout
        android:id="@+id/act_main_all_fragment_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"/>

    <devlight.io.library.ntb.NavigationTabBar
        android:id="@+id/act_main_ntb_horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:ntb_active_color="#25dbe7"
        app:ntb_animation_duration="0"
        app:ntb_badge_bg_color="#fff"
        app:ntb_badged="false"
        app:ntb_bg_color="#fff"
        app:ntb_icon_size_fraction="0.5"
        app:ntb_inactive_color="#8e8e8e"
        app:ntb_scaled="true"
        app:ntb_swiped="false"
        app:ntb_tinted="true"
        app:ntb_title_mode="all"
        app:ntb_titled="true" />

    <!--&lt;!&ndash;可以自主选择是否可以滑动&ndash;&gt;-->
    <!--<com.zhou.ghost.ui.anim.ViewPagerSlide-->
