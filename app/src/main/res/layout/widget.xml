<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000099CC"
    android:orientation="vertical"
    android:gravity="center"
    >


    <!--小插件最上方一行-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        >

        <TextView
            android:id="@+id/widget_now_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="#000099CC"
            android:text="00°"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/widget_now_temperature"
            android:orientation="vertical">



            <TextView
                android:id="@+id/widget_now_weather_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/widget_now_weather_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/widget_now_time_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:text="00:00"

            />

    </RelativeLayout>

    <!--小插件下方时间条-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_now_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="111111111111111" />

        <TextView
            android:id="@+id/widget_now_time_lunar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:text="2222222222222" />


    </RelativeLayout>

</LinearLayout>