<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--基础色-->
    <attr name="base_color" format="color"/>
    <!--标题背景颜色-->
    <attr name="title_background" format="reference|color"/>
    <!--标题字体颜色-->
    <attr name="title_text_color" format="color"/>
    <!--主界面头部颜色-->
    <attr name="main_title_background" format="reference|color"/>
    <!--登录按钮-->
    <attr name="login_button" format="reference"/>
    <!--保存记录按钮-->
    <attr name="add_bus_button" format="reference"/>
    <!--猪只选择弹窗查询按钮-->
    <attr name="dialog_seach_button" format="reference"/>
    <!--猪只选择弹窗列标题背景-->
    <attr name="dialog_title_bg" format="reference"/>
    <!--档案类别选中按钮-->
    <attr name="file_selected_button" format="reference"/>
    <!--档案类别未选中按钮-->
    <attr name="file_normal_button" format="reference"/>
    <!--弹窗表头色-->
    <attr name="dialog_base_color" format="color"/>

    <declare-styleable name="Slider">
        <!--菜单与屏幕右边的距离-->
        <attr name="MenuRightMargin" format="dimension"/>
        <!--菜单与屏幕左边的距离-->
        <attr name="MenuLeftMargin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="AlarmClockView">
        <!--外圆颜色-->
        <attr name="outerCircleColor" format="reference|color" />
        <!--内圆颜色-->
        <attr name="innerCircleColor" format="reference|color" />
        <!--秒针颜色-->
        <attr name="secondHandColor" format="reference|color" />
        <!--分针颜色-->
        <attr name="minuteHandColor" format="reference|color" />
        <!--时针颜色-->
        <attr name="hourHandColor" format="reference|color" />
        <!--时钟分钟刻度颜色-->
        <attr name="minuteScaleColor" format="reference|color" />
        <!--时钟分钟5的倍数刻度颜色-->
        <attr name="scaleColor" format="reference|color" />
        <!--时钟下面实时时间文本颜色-->
        <attr name="dateValueColor" format="reference|color" />
        <!--是否显示时钟下实时时间文本-->
        <attr name="isShowTime" format="boolean" />
        <!--时钟占整体控件的大小比例-->
        <attr name="proportion" format="float" />
        <!--是否设置为夜间模式-->
        <attr name="night" format="boolean" />
    </declare-styleable>

</resources>